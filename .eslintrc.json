{
    "root": true,
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "arrow-body-style": "off",
        "prefer-arrow-callback": "off",
        "prettier/prettier": "error",
        "quotes": ["error", "single"],
        "semi": ["off", "always"]
    }
}
